<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Menu"
             Title="Меню">
    <VerticalStackLayout>
        <Grid>
            <!-- Фон -->
            <Image Source="background.jpg" Aspect="AspectFill" />

            <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <Button Text="🚦 Информация о знаках" Clicked="OnSignsInfoClicked"/>
                <Button Text="🛣️ Дорожная разметка" Clicked="OnRoadMarkingsClicked"/>
                <Button Text="🛠️ Перечень неисправностей" Clicked="OnFaultsListClicked" />
                <Button Text="📝 Тестирование" Clicked="OnTestClicked"  />
                <Button Text="📖 Справка" Clicked="OnHelpClicked" />
                <Button Text="ℹ О нас" Clicked="OnAboutClicked"  />
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>