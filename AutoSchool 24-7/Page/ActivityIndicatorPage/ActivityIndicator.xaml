<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Page.ActivityIndicatorPage.ActivityIndicator"
             Title="ActivityIndicator">
    <StackLayout x:Name="MainContent" Padding="20">

        <!-- Индикатор загрузки -->
        <ActivityIndicator 
        x:Name="LoadingIndicator" 
        IsRunning="True"
        IsVisible="False"
        Color="DarkBlue"
        HeightRequest="40"
        HorizontalOptions="Center" />

        <Label 
        x:Name="LoadingLabel" 
        Text="Загрузка..." 
        FontSize="16"
        TextColor="DarkGray"
        HorizontalOptions="Center"
        IsVisible="False"/>

        <!-- Контент, который загружается -->
        <CollectionView x:Name="DataList" IsVisible="False">
            <!-- ItemTemplate и т.д. -->
        </CollectionView>
    </StackLayout>
</ContentPage>