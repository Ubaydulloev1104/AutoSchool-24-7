                <StackLayout>
                    <Image Source="sign_4_1_5.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.5. Движение прямо или налево" FontSize="18"/>
                    <Label Text="Разрешается только движение прямо, налево или разворот." FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.5 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которыми установлен знак." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.1.6. Движение направо или налево -->
                <StackLayout>
                    <Image Source="sign_4_1_6.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.6. Движение направо или налево"  FontSize="18" />
                    <Label Text="Разрешается движение только направо, налево, а также разворот." FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.6 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которыми установлен знак." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.2.1. Объезд препятствия справа -->
                <StackLayout>
                    <Image Source="sign_4_2_1.png" HeightRequest="100"/>
                    <Label Text="Знак 4.2.1. Объезд препятствия справа" FontSize="18"/>
                    <Label Text="Объезд препятствия справа." FontSize="14"  Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.2.1 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Указывает, что объезд препятствий на проезжей части разрешается со стороны, указанной стрелкой." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.2.2. Объезд препятствия слева -->
                <StackLayout>
                    <Image Source="sign_4_2_2.png" HeightRequest="100"/>
                    <Label Text="Знак 4.2.2. Объезд препятствия слева" FontSize="18"/>
                    <Label Text="Объезд препятствия слева." FontSize="14"  Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.2.2 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Указывает, что объезд препятствий на проезжей части разрешается со стороны, указанной стрелкой." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.2.3. Объезд препятствия справа или слева -->
                <StackLayout>
                    <Image Source="sign_4_2_3.png" HeightRequest="100"/>
                    <Label Text="Знак 4.2.3. Объезд препятствия справа или слева" FontSize="18"/>
                    <Label Text="Объезд препятствия разрешается с любой стороны." FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Знак 4.3. Круговое движение -->
                <StackLayout>
                    <Image Source="sign_4_3.png" HeightRequest="100"/>
                    <Label Text="Знак 4.3. Круговое движение" FontSize="18"/>
                    <Label Text="Движение организовано по кругу в направлении стрелок." 
           FontSize="14" 
           HorizontalOptions="Center" 
           Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.3 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Выезд на пересечение с круговым движением разрешается с любой полосы." FontSize="14"/>
                    <Label Text="- Предварительное перестроение не требуется. Съезд производится по общим правилам маневрирования, из крайнего положения на проезжей части." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.4.1. Велосипедная дорожка -->
                <StackLayout>
                    <Image Source="sign_4_4_1.png" HeightRequest="100"/>
                    <Label Text="Знак 4.4.1. Велосипедная дорожка" FontSize="18"/>
                    <Label Text="Разрешается движение только на велосипедах." 
           FontSize="14" 
        
           Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.4.1 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- По велосипедной дорожке могут двигаться также пешеходы." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.4.2. Конец велосипедной дорожки -->
                <StackLayout>
                    <Image Source="sign_4_4_2.png" HeightRequest="100"/>
                    <Label Text="Знак 4.4.2. Конец велосипедной дорожки" FontSize="18"/>
                    <Label Text="Конец зоны действия знака 4.4.1." FontSize="14" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Знак 4.5.1. Пешеходная дорожка -->
                <StackLayout>
                    <Image Source="sign_4_5_1.png" HeightRequest="100"/>
                    <Label Text="Знак 4.5.1. Пешеходная дорожка" FontSize="18"/>
                    <Label Text="Разрешается движение пешеходам, лицам, использующим для передвижения средства индивидуальной мобильности, и велосипедистам в случаях, указанных в пунктах 24.2, 24.3, 24.4 и 24.6 настоящих Правил." 
           FontSize="14" 
           HorizontalOptions="Center" 
           Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.5.1 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Знак применяется для обозначения дорожек, предназначенных только для пешеходов." FontSize="14"/>
                    <Label Text="(Изменения вступили в силу: 1 марта 2023 года)." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.5.2. Пешеходная и велосипедная дорожка с совмещенным движением -->
                <StackLayout>
                    <Image Source="sign_4_5_2.png" HeightRequest="100"/>
                    <Label Text="Знак 4.5.2. Пешеходная и велосипедная дорожка с совмещенным движением"
                       FontSize="18"/>
                    <Label Text="Пешеходная и велосипедная дорожка с совмещенным движением (велопешеходная дорожка с совмещенным движением)." 
                       FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Знак 4.5.3. Конец пешеходной и велосипедной дорожки с совмещенным движением -->
                <StackLayout>
                    <Image Source="sign_4_5_3.png" HeightRequest="100"/>
                    <Label Text="Знак 4.5.3. Конец пешеходной и велосипедной дорожки с совмещенным движением"
                       FontSize="18"/>
                    <Label Text="Конец велопешеходной дорожки с совмещенным движением." 
                       FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Знаки 4.5.4 и 4.5.5. Пешеходная и велосипедная дорожка с разделением движения -->
                <StackLayout>
                    <Image Source="sign_4_5_4.png" HeightRequest="100"/>
                    <Label Text="Знак 4.5.4. Пешеходная и велосипедная дорожка с разделением движения"
                       FontSize="18"/>
                    <Label Text="Велопешеходная дорожка с разделением на велосипедную и пешеходную стороны." 
                       FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <StackLayout>
                    <Image Source="sign_4_5_5.png" HeightRequest="100"/>
                    <Label Text="Знак 4.5.5. Пешеходная и велосипедная дорожка с разделением движения"
                       FontSize="18"/>
                    <Label Text="Велопешеходная дорожка с разделением на велосипедную и пешеходную стороны." 
