<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Page.SignsIngoPage.MandatorySignsPage"
             Title="Предписывающие знаки">
    <Grid>

        <!-- Панель загрузки -->
        <StackLayout x:Name="LoadingPanel"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Spacing="10"
                     BackgroundColor="#80000000"
                     Padding="30"
                     IsVisible="True">
            <ActivityIndicator IsRunning="True" Color="White" />
            <Label Text="Загрузка..."
                   TextColor="White"
                   FontSize="18"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Основной контент -->
        <ScrollView x:Name="MainContent" IsVisible="False">


            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Предписывающие знаки" 
           FontSize="24" 
           FontAttributes="Bold" 
           HorizontalOptions="Center"/>

                <!-- Знак 4.1.1. Движение прямо -->
                <StackLayout>
                    <Image Source="sign_4_1_1.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.1. Движение прямо" FontSize="18"/>
                    <Label Text="Разрешается движение только прямо в случае, когда знак установлен непосредственно перед пересечением проезжих частей." 
           FontSize="14" 
           HorizontalOptions="Center" 
           Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.1 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства (трамвай, троллейбус, автобус)." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которым установлен знак." FontSize="14"/>
                    <Label Text="- Если знак установлен в начале участка дороги, действие знака распространяется до ближайшего перекрестка." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.1.2. Движение направо -->
                <StackLayout>
                    <Image Source="sign_4_1_2.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.2. Движение направо" FontSize="18"/>
                    <Label Text="Разрешается движение только направо." FontSize="14"  Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.2 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которыми установлен знак." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.1.3. Движение налево -->
                <StackLayout>
                    <Image Source="sign_4_1_3.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.3. Движение налево" FontSize="18"/>
                    <Label Text="Разрешается только движение налево или разворот." FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.3 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которыми установлен знак." FontSize="14"/>
                </StackLayout>

                <!-- Знак 4.1.4. Движение прямо или направо -->
                <StackLayout>
                    <Image Source="sign_4_1_4.png" HeightRequest="100"/>
                    <Label Text="Знак 4.1.4. Движение прямо или направо" FontSize="18"/>
                    <Label Text="Разрешается движение только прямо или направо." FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Особенности знака 4.1.4 -->
                <StackLayout>
                    <Label Text="Особенности:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- От действия знака отступают маршрутные транспортные средства." FontSize="14"/>
                    <Label Text="Зона действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Распространяется на пересечение проезжих частей, перед которыми установлен знак." FontSize="14"/>
                </StackLayout>

