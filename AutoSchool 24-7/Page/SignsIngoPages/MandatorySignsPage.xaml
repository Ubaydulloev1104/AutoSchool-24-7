                    <Label Text="Конец велопешеходной дорожки с разделением движения." 
                       FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Знак 4.6. Ограничение минимальной скорости -->
                <StackLayout>
                    <Image Source="sign_4_6.png" HeightRequest="100"/>
