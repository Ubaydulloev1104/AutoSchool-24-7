<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Page.SignsIngoPage.WarningSignsPage"
             Title="WarningSignsPage">
    <VerticalStackLayout>

        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <Label Text="⚠️ Предупреждающие знаки" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>

                <!-- Знак 1.1. Железнодорожный переезд со шлагбаумом -->
                <StackLayout>
                    <Image Source="sing_1_1.png" HeightRequest="100"/>
                    <Label Text="Знак 1.1. Железнодорожный переезд со шлагбаумом" FontSize="18"/>
                    <Label Text="Предупреждает о приближении к ж/д переезду со шлагбаумом." 
                               FontSize="14" 
                               HorizontalOptions="Center" 
                               Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Список запрещенных действий -->
                <StackLayout>
                    <Label Text="Запрещенные действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Обгон на ж/д переездах и ближе, чем за 100 м перед ними." FontSize="14"/>
                    <Label Text="- Остановка и стоянка на ж/д переездах." FontSize="14"/>
                    <Label Text="- Стоянка ближе 50 м от ж/д переездов." FontSize="14"/>
                    <Label Text="- Разворот." FontSize="14"/>
                    <Label Text="- Движение задним ходом." FontSize="14"/>
                    <Label Text="- Провозить через переезд в нетранспортном положении сельскохозяйственные машины." FontSize="14"/>
                    <Label Text="- Объезжать с выездом на полосу встречного движения стоящие перед закрытым шлагбаумом ТС." FontSize="14"/>
                    <Label Text="- Самовольно открывать шлагбаум." FontSize="14"/>
                </StackLayout>
                <!-- Знак 1.2. Железнодорожный переезд без шлагбаума -->
                <StackLayout>
                    <Image Source="sing_1_2.png" HeightRequest="100"/>
                    <!-- Убедитесь, что у вас есть изображение для этого знака -->
                    <Label Text="Знак 1.2. Железнодорожный переезд без шлагбаума" FontSize="18"/>
                    <Label Text="Предупреждает о приближении к ж/д переезду без шлагбаума." 
                               FontSize="14" 
                               HorizontalOptions="Center" 
                               Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Список запрещенных действий для знака 1.2 -->
                <StackLayout>
                    <Label Text="Запрещенные действия:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,5"/>
                    <Label Text="- Обгон на ж/д переездах и ближе, чем за 100 м перед ними." FontSize="14"/>
                    <Label Text="- Остановка и стоянка на ж/д переездах." FontSize="14"/>
                    <Label Text="- Стоянка ближе 50 м от ж/д переездов." FontSize="14"/>
                    <Label Text="- Разворот." FontSize="14"/>
                    <Label Text="- Движение задним ходом." FontSize="14"/>
                    <Label Text="- Провозить через переезд в нетранспортном положении сельскохозяйственные машины." FontSize="14"/>
                    <Label Text="- Движение тихоходных машин со скоростью менее 8 км/ч без разрешения." FontSize="14"/>
                    <Label Text="- Объезжать с выездом на полосу встречного движения стоящие перед закрытым шлагбаумом ТС." FontSize="14"/>
                    <Label Text="- Самовольно открывать шлагбаум." FontSize="14"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
