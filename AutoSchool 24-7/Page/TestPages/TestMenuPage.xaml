<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Page.TestPages.TestMenuPage"
                   Title="📝 Раздел тестирования">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" Margin="0,20,0,20">
        <Label Text="Выберите режим тестирования"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <Button Text="🕓 Тест с таймером"
                FontSize="18"
                Clicked="OnTestWithTimerClicked"
                BackgroundColor="#3498db"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"/>

        <Button Text="✅ Тест без таймера"
                FontSize="18"
                Clicked="OnTestWithoutTimerClicked"
                BackgroundColor="#2ecc71"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"/>

        <Button Text="📘 Справка по тестированию"
                FontSize="18"
                Clicked="OnHelpClicked"
                BackgroundColor="#f39c12"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"/>
    </VerticalStackLayout>
</ContentPage>