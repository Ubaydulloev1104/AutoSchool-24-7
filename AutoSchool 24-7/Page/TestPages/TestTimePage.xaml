<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.Page.TestPages.TestTimePage"
             Title="Тестирование">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Количество вопросов:" FontSize="16" VerticalOptions="Center" />
                <Picker x:Name="QuestionCountPicker"
            Title="Выберите"
            WidthRequest="120"
            FontSize="16">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:Int32}">
                            <x:Int32>5</x:Int32>
                            <x:Int32>10</x:Int32>
                            <x:Int32>20</x:Int32>
                            <x:Int32>30</x:Int32>
                            <x:Int32>40</x:Int32>
                            <x:Int32>50</x:Int32>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Text="Время на тест:" FontSize="16" VerticalOptions="Center" />
                <Picker x:Name="TimePicker"
            Title="Минуты"
            WidthRequest="120"
            FontSize="16">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:Int32}">
                            <x:Int32>1</x:Int32>
                            <x:Int32>3</x:Int32>
                            <x:Int32>5</x:Int32>
                            <x:Int32>10</x:Int32>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </HorizontalStackLayout>

            <!-- Кнопка Старт -->
            <Button x:Name="StartButton"
                    Text="Начать тест"
                    FontSize="18"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="StartTest"
                    HorizontalOptions="Center"/>

            <!-- Таймер -->
            <Label x:Name="TimerLabel"
                   Text="Время: 60 сек"
                   FontSize="18"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Счётчик вопросов -->
            <Label x:Name="QuestionCounterLabel"
                   FontSize="16"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Вопрос -->
            <Label x:Name="QuestionLabel"
                   FontSize="18"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Картинка -->
            <Image x:Name="QuestionImage"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Ответы -->
            <StackLayout x:Name="AnswersLayout"
                         Spacing="10"
                         IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
