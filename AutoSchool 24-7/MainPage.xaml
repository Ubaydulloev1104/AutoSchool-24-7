<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.MainPage"
             Title="Авто школа 24-7">

    <Grid>
        <!-- Фон -->
        <Image Source="loge.png"
               Aspect="AspectFill" />

        <!-- Затемнение -->
        

        <StackLayout Padding="30" VerticalOptions="Center" Spacing="30">
            <Label Text="🚗 Авто школа 24-7"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Label Text="Добро пожаловать! Учите ПДД, знаки, разметку, неисправности и проходите тесты прямо в приложении."
                   FontSize="18"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />

            <Button Text="➡ Перейти в меню"
                    Clicked="OnGoToMenuClicked"
                    FontSize="18"
                    BackgroundColor="#27ae60"
                    TextColor="White"
                    CornerRadius="15"
                    Padding="15,10"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
