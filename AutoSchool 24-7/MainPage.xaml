<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSchool_24_7.MainPage"
             Title="Авто школа 24-7">
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         BackgroundColor="Transparent"
                         Padding="40">
        <!-- Логотип с именем для анимации -->

        <Image x:Name="LogoImage"
       Source="loga.png"
       HeightRequest="180"
       WidthRequest="180"
       Aspect="AspectFit"
       HorizontalOptions="Center"
       Loaded="OnLogoLoaded"/>

        <Label Text="Авто школа 24-7"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalTextAlignment="Center" />

        <Label Text="Изучай ПДД, проходи тесты и совершенствуй свои знания."
               FontSize="16"
               TextColor="Gray"
               HorizontalTextAlignment="Center" />

        <Button Text="Начать"
                FontSize="18"
                Clicked="OnGoToMenuClicked"
                BackgroundColor="#27ae60"
                TextColor="White"
                Padding="12,8"
                CornerRadius="20"
                WidthRequest="200"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
